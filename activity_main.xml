<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- العنوان -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="أداة معالجة الملفات"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- بطاقة اختيار الملف -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اختر ملف للمعالجة"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_select_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اختيار ملف"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:drawableLeft="@android:drawable/ic_menu_gallery"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="لم يتم اختيار ملف"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:background="#F0F0F0" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- زر المعالجة -->
    <Button
        android:id="@+id/btn_process_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="معالجة الملف"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_manage"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:enabled="false" />

    <!-- بطاقة النتائج -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ستظهر نتائج المعالجة هنا"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="monospace" />

        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- شريط تقدم (مخفي افتراضياً) -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>